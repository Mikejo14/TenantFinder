<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TenantFinder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">#D81B70</item>
    </style>

    <style name="standard_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_button_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/standard_button_margin</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/standard_button_rounded</item>
    </style>
    
    <style name="StandardButtonGrey"  parent="standard_button">
        <item name="android:background">@drawable/standard_button_rounded_grey</item>
    </style>
    
    <style name="SendButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_button_size</item>
        <item name="android:background">@drawable/send_button_rounded</item>
    </style>
    
    <style name="ChatBubble">
        <item name="android:textSize">@dimen/chat_text_size</item>
        <item name="android:minHeight">@dimen/chat_standard_size</item>
        <item name="android:maxWidth">@dimen/chat_max_size</item>
    </style>

</resources>